<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@android:drawable/dialog_holo_light_frame">

    <!-- Date Header -->
    <TextView
        android:id="@+id/summaryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oct 5, 2025"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <!-- Total Count -->
    <TextView
        android:id="@+id/summaryTotalCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Count: 15"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_marginBottom="12dp"
        android:visibility="gone"/>

    <!-- Emotion Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Left: Emoji and Name -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/summaryEmotionIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:text="ðŸ˜Š"/>

            <TextView
                android:id="@+id/summaryEmotionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:text="(Happy)"/>
        </LinearLayout>

        <!-- Right: Frequency -->
        <TextView
            android:id="@+id/summaryFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="5"/>
    </LinearLayout>

</LinearLayout>